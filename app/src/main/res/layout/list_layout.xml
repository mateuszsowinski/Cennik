<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card:contentPadding="10dp"
    card:cardUseCompatPadding="true"
    card:cardBackgroundColor="@color/cardview_light_background">


    <GridLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNazwa"
                android:textColor="@color/colorText"/>
        </LinearLayout>

        <RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Netto: "
                android:textColor="@color/colorToast"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/txNetto"
                android:textColor="@color/colorText"/>

        </RelativeLayout>

        <RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Brutto: "
                android:textColor="@color/colorToast"/>

            <TextView
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/txtBrutto" />
        </RelativeLayout>
        <RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="EAN: "
                android:textColor="@color/colorToast"/>

            <TextView
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/txtEAN"/>
        </RelativeLayout>

    </GridLayout>
</android.support.v7.widget.CardView>